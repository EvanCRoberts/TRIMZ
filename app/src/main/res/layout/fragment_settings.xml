<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment"
    android:background="@color/bg_color">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="111dp"
        android:layout_height="119dp"
        android:layout_below="@id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="150dp"
        android:src="@drawable/gear_orange" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:gravity="center"
        android:hint="user@email.com"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textColorHint="#8F8F8F" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/editTextTextEmailAddress"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        android:ems="10"
        android:gravity="center"
        android:hint="User Password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="#8F8F8F" />

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/editTextTextPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        android:ems="10"
        android:gravity="center"
        android:hint="(123) 456 - 7890"
        android:inputType="phone"
        android:textColor="@color/black"
        android:textColorHint="#8F8F8F" />

    <Switch
        android:id="@+id/locationSwitch"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/editTextPhone"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="Enable Location Services?"
        android:textColor="#8F8F8F" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/bebas_neue"
        android:gravity="center"
        android:text="Settings"
        android:textColor="@color/TRIMZ_Orange"
        android:textSize="30dp"
        tools:text="Settings" />

    <Button
        android:id="@+id/barberButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/locationSwitch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Register As A Barber?"
        app:backgroundTint="@color/TRIMZ_Orange" />

</RelativeLayout>